<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#46547f"
        />
    <EditText
        android:id="@+id/newDeviceNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="타입"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#46547f"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/deviceRadioGroup">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/radio_button_light"
            android:id="@+id/r_light"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/radio_button_fan"
            android:id="@+id/r_fan"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/radio_button_blind"
            android:id="@+id/r_blind"
            />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="방선택"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#46547f"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/roomRadioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Living Room"
            android:id="@+id/livingRadioBtn"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bathroom"
            android:id="@+id/bathRadioBtn"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bedroom"
            android:id="@+id/bedRadioBtn"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Study Room"
            android:id="@+id/studyRadioBtn"/>

    </RadioGroup>


    <Button
        android:text="ok"
        android:onClick="onClickOK"
        android:layout_gravity="center"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"/>



</LinearLayout>