<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/tinker_analog_write_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/analog_write_parent_width"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|end"
    android:gravity="center_vertical|end" android:orientation="horizontal">

    <TextView
        android:id="@+id/tinker_analog_write_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:gravity="center_vertical|start"
        android:textSize="@dimen/analog_write_text_value_size"
        android:text="0"/>

    <io.particle.android.sdk.tinker.ReversedSeekBar
        android:id="@+id/tinker_analog_write_seekbar"
        style="@style/TinkerSeekBar"
        android:layout_gravity="center_vertical|end"
        android:gravity="center_vertical|end"
        android:progress="0"/>

</LinearLayout>